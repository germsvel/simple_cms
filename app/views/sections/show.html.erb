<%=  link_to("<< Back to List", sections_path(:page_id => @page.id), :class => 'btn btn-link') %>

<div class="section show">
	<h2 class="title">Show Section</h2>

	<table summary="Section detail view">
		<tr>
			<th>Page ID</th>
			<td><%=  @page.id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%=  @section.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%=  @section.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%=  @section.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td>Type: <%= @section.content_type %><br />
				<%=  @section.content %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%=  @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%=  @section.updated_at %></td>
		</tr>
	</table>

</div>
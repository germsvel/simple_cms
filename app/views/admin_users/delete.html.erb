<% @page_title = "Delete Admin User: #{@admin_user.name}" %>

<%= link_to("<< Back to Admin Users menu", :action => 'list') %>

<div>
	<h2>Delete Admin User</h2>
	

	<%= form_for(:admin_user, :url => {:action => 'destroy', :id => @admin_user.id}) do |f| %>

	<p>Are you sure you want to permanently delete admin user <%= @admin_user.name %>?</p>
	<p>This action cannot be undone!</p>

	<div class="form-buttons">
		<%= f.submit("Yes, delete admin user") %>
	</div>

	<% end %>

</div>

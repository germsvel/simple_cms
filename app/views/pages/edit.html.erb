<%=  link_to("<< Back to List", {:action => 'list', :subject_id => @subject.id}, :class => 'btn btn-link') %>

<div class="page edit">
	<h2 class="title">Update Page</h2>

	<%= form_for(:page, :url => {:action => 'update', :id => @page.id, :subject_id => @subject.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>

		<div class="form-buttons btn">
			<%= submit_tag("Update Page") %>
		</div>
	<% end %>

</div>